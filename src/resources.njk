{% row %}
<div class="bg-c-fg1-l max-w-screen-xl px-4 py-5 mx-auto lg:px-16 lg:py-8">
    {% for resource in resources %}
    <div class="bg-c-bg2-l   max-w-screen-xl rounded-xl px-8 pb-8 pt-8 mx-auto my-8 solid-shadow  ">
      <h3
        class="text-center text-gray-500  lg:text-left mb-4 text-sm/snug tracking-normal md:text-md/snug xl:text-lg/snug ">
        {{resource.date | formatDate }}</h3>

      <h3
        class="text-center text-gray-500  lg:text-left mb-4 text-sm/snug tracking-normal md:text-md/snug xl:text-lg/snug ">
        <a href="{{resource.data.resource_link | url}}" rel="noopener noreferrer"
        class="text-center text-colour-dark hover:underline  lg:text-left mb-4 width-full text-2xl/snug font-extrabold tracking-normal md:text-3xl/snug xl:text-4xl/snug ">
        {{resource.data.title}}</a></h3>
      

      <div class="flex flex-wrap max-w-screen-xl py-8 mx-auto">
        {% if resource.data.image !== "" %}
        <div class="flex px-10 py-2 max-w-sm lg:w-1/3 justify-center mx-auto"> 
          <a href="{{resource.data.resource_link | url}}">
            <img src="{{resource.data.image | url}}">
          </a>
        </div>
        {% endif %}
        <div class="mx-auto place-self-center {% if resource.data.image != ''%}md:w-2/3{%else%}md:w-full{%endif%}">
          <p
            class="select-none text-center lg:text-left mb-5 mt-5 font-light text-colour-dark lg:mb-8 md:text-lg/normal lg:text-xl/normal  ">
            {{resource.data.excerpt}}
          </p>
          <div class="flex mx-auto justify-center md:justify-start ">
            <a href="{{resource.data.resource_link | url}}"
              class="mx-auto lg:mx-0 md:mt-5 button-square-primary  
              rel="noopener noreferrer">
              {% if resource.data.type == "external" %}
              Go To Link
              {% elif resource.data.type == "youtube" %}
              View on YouTube
              {% elif resource.data.type == "pdf" %}
              Open PDF
              {% elif resource.data.type == "register" %}
              Register to Attend
              {%else%}
              Read More
              {%endif%}
              
              <svg class="ml-2 w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round"
                  d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}

  <div class="flex max-w-screen-xl mx-auto my-5">
    <div class="ml-auto">
      {% if pagination.href.previous %}
        <a href="{{pagination.href.previous | url}}" class="px-2 x-auto lg:mx-0 md:mt-5 button-square-primary  ">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75" />
        </svg>
        </a>
      {% else %}
