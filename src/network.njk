{% row %}
  <div class="bg-c-fg1-l  grid place-content-center max-w-screen-xl px-8 lg:px-16 pt-8 mx-auto lg:pt-12 lg:grid-cols-12">
    <div class="mr-auto place-self-center lg:col-span-12">
      <h1
        class="text-center uppercase text-colour-dark  lg:text-left mb-4 text-3xl/snug font-extrabold tracking-normal md:text-4xl/snug xl:text-5xl/snug ">
        Our Network</h1>
      <p
        class=" text-center lg:text-left mb-5 mt-5 font-light text-colour-dark mx-15 md:mx-5 md:ml-0 md:mr-6 lg:mb-8 md:text-lg/normal lg:text-xl/normal  ">
        A diverse network of brain researchers, clinicians, and institutions committed to achieving improved and more equitable health outcomes worldwide.
      </p>
    </div>
  </div>
{% endrow %}

{% row %}
<div class="bg-c-fg1-l max-w-screen-xl px-4 py-5 mx-auto lg:px-16 lg:py-8">
  <div class="max-w-screen-xl px-4 py-6 mx-auto lg:py-6 lg:mt-6 lg:grid-cols-12">
    <div class="mr-auto place-self-center lg:col-span-10">
      <h1
        class="text-center text-colour-dark  lg:text-left mb-16 text-2xl/snug font-extrabold tracking-normal md:text-3xl/snug xl:text-4xl/snug ">
        GBC Chairs</h1>
      <div class="flex flex-wrap">
        {% for person in people %}
        {% if person.steeringGroupMember == true %}
        {% if person.website != null %}
        <a href="{{person.website}}" target="_blank" rel="noopener noreferrer">
          {% endif %}
          <div class="w-full md:w-full lg:w-1/2 px-3 pb-6 md:px-4 md:pb-8">
            <div class="grid grid-cols-4  bg-c-bg2-l shadow-lg rounded-lg person-box-title-container p-2">
              <img class="col-span-1 rounded-full ring-2 ring-white mx-auto my-5 max-w-24 max-h-24"
                src="{% if person.image != null %}{{ person.image | url }}{% else %}{{'/assets/images/people/placeholder.png' | url}}{% endif %}"
                alt="{{ person.name }} Avatar">
              <div class="col-span-3 mx-4 my-5 pl-4">
                <h3 class="mb-3 text-md md:text-left font-bold text-gray-900   {% if person.website != null %}{{'person-box-title'}}{% endif %}">
                  {% if person.website != null %}
                  <span id="{{person.slug}}" class="flex">{{ person.name }}
                    <div class="ml-auto self-center">
                      <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                        stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round"
                          d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                      </svg>
                    </div>
                  </span>
                  {% else %}
                  <p id="{{person.slug}}">{{ person.name }}
        
        {%endif%}
        </h3>
        <p class="md:text-left text-sm text-gray-800  ">{{ person.jobTitle }}</p>
        <p class="md:text-left text-xs text-gray-400 ">{{person.affiliation}}</p>
      </div>
    </div>
    {% if person.website != null %}
    </a>
    {% endif %}
  </div>
  {% endif %}
  {% endfor %}
  </div>

  </div>
  </div>
  </div>
{% endrow %}


{% row %}
<div class="bg-c-fg1-l max-w-screen-xl px-4 py-5 mx-auto lg:px-16">
  <div class="max-w-screen-xl px-4 mx-auto lg:grid-cols-12" x-data="{selectedExpertise: {{expertiseTags.tags | listToQuotedListString}}, deselect(ex) {this.selectedExpertise = this.selectedExpertise.filter(item => item !== ex)}, select(ex) {if(this.selectedExpertise.indexOf(ex)) { this.selectedExpertise.push(ex)}}, isSelected(exList) {return (exList.split(',')).some(v => this.selectedExpertise.includes(v))}}">
    <div class="mr-auto place-self-center lg:col-span-10">
      <h1 id="members"
        class="text-center text-colour-dark  lg:text-left mb-8 text-2xl/snug font-extrabold tracking-normal md:text-3xl/snug xl:text-4xl/snug ">
        Steering Committee</h1>
